@model UsefulSites.Web.ViewModels.MainViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="jumbotron">
        <h1>Top Picks</h1>
    </div>
</div>
<div>
    @foreach (var resourceType in Model.TopResources)
    {
    <table class="table table-striped table-hover">
        <tbody>
            @foreach (var resource in resourceType.Resources)
            {
                <tr>
                    <td>@resource.Name</td>
                    <td>@resource.Description</td>
                </tr>
            }

        </tbody>
    </table>

    }
</div>

<div class="row">
    <div class="col-md-3">        
        <a href="/WebSites/WebSiteList">All Resources</a>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Recommend</h2>
        <a href="">Go to</a>
    </div>
</div>
