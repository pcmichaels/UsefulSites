@model UsefulSites.Web.ViewModels.MainViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="jumbotron">
        <h2>Search</h2>
        <div class="search-control">
            <input asp-for="SearchText"
                   placeholder="Enter site name, description or category here..."
                   aria-label="Search for resource on the web" />
        </div>

        <table class="table table-striped table-hover">
            <tbody>
                @foreach (var result in Model.SearchResults)
                {
                    <tr>
                        <td>@result.Description</td>                        
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="jumbotron">
        <h2>Top Picks</h2>

        @foreach (var resourceType in Model.TopResources)
        {
            <table class="table table-striped table-hover">
                <tbody>
                    @foreach (var resource in resourceType.Resources)
                    {
                        <tr>
                            <td>@resource.Name</td>
                            <td>@resource.Description</td>
                        </tr>
                    }

                </tbody>
            </table>

        }
    </div>
</div>

<div class="row">
    <div class="jumbotron">
        <h2>Top Categories</h2>

        <table class="table table-striped table-hover">
            <tbody>

                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.CategoryName</td>
                        <td>@category.WebSiteModels.Count()</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <a href="/WebSites/WebSiteList">All Resources</a>
    </div>
</div>

